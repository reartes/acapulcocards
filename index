<body>
  <main class="wrap">
    <div id="cardText" class="text">
      <div class="lead">press <strong>new</strong> to draw</div>
      <div class="instr">&nbsp;</div>
      <div class="explain">&nbsp;</div>
    </div>
  </main>
  <button id="draw" class="btn">new</button>

  <script>
    const prompts = [
      {lead:"let touch complete its vision", instr:"allow the work to be carried", explain:"when art moves between bodies, it becomes shared memory"},
      {lead:"repeat until you disappear", instr:"let repetition become trance", explain:"when rhythm replaces intention, the work begins to breathe"},
      {lead:"begin at the edge", instr:"begin at the edge, not the center", explain:"edges invite decisions; centers hide them"},
      {lead:"invite the body", instr:"invite the body before the mind", explain:"understanding arrives through weight, balance, and reach"},
      {lead:"space will finish", instr:"let space finish the sentence", explain:"leave a gap and let the room write the rest"},
      {lead:"stretch the instant", instr:"stretch time: make the work unfold", explain:"slow sequences allow noticing to accumulate"},
      {lead:"compose for walking", instr:"compose for someone walking past", explain:"movement is part of the reading"},
      {lead:"ask refusal", instr:"ask the material what it refuses", explain:"resistance reveals the form's boundary"},
      {lead:"crown the error", instr:"return to the first mistake and crown it", explain:"a visible fault can organize the whole"},
      {lead:"evidence of hands", instr:"leave one seam visible", explain:"process is credibility"}
      // ...you can keep adding up to 100 objects in the same format
    ];

    let seen = new Set();

    function pick(){
      if(seen.size === prompts.length) seen.clear();
      let i;
      do { i = Math.floor(Math.random()*prompts.length); }
      while(seen.has(i));
      seen.add(i);
      return i;
    }

    function draw(){
      const i = pick();
      const item = prompts[i];
      const container = document.getElementById('cardText');
      container.innerHTML = '';

      const lead = document.createElement('div');
      lead.className = 'lead';
      lead.textContent = item.lead;

      const instr = document.createElement('div');
      instr.className = 'instr';
      instr.textContent = item.instr;

      const explain = document.createElement('div');
      explain.className = 'explain';
      explain.textContent = item.explain.toLowerCase();

      container.appendChild(lead);
      container.appendChild(instr);
      container.appendChild(explain);
    }

    document.getElementById('draw').addEventListener('click', draw);
    document.addEventListener('keydown', (e)=>{
      if(e.code==='Space'){ e.preventDefault(); draw(); }
    });
  </script>
</body>
</html>






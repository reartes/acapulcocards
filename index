<style>
  body{margin:0;background:#F2EEE9;color:#000;font-family:Futura,"Avenir Next",Avenir,"Helvetica Neue",Helvetica,Arial,sans-serif;display:grid;place-items:center;min-height:100vh}
  .text{display:grid;gap:12px;justify-items:center;text-align:center}
  .lead{font-size:20px;text-transform:uppercase;letter-spacing:.05em}
  .instr{font-size:40px;font-weight:700;line-height:1.2;max-width:900px}
  .explain{font-size:16px;color:#4d4d4d;max-width:900px}
  button{position:fixed;left:50%;bottom:20px;transform:translateX(-50%);background:transparent;border:1px solid #000;border-radius:999px;padding:8px 14px;cursor:pointer}
</style></head><body>
<main class="text" id="card"><div class="lead">press <b>new</b> to draw</div><div class="instr"> </div><div class="explain"> </div></main>
<button id="btn">new</button>
<script>
  (function(){
    var prompts=[
      {lead:"let touch complete its vision", instr:"allow the work to be carried", explain:"when art moves between bodies, it becomes shared memory"},
      {lead:"repeat until you disappear", instr:"let repetition become trance", explain:"when rhythm replaces intention, the work begins to breathe"},
      {lead:"begin at the edge", instr:"begin at the edge, not the center", explain:"edges invite decisions; centers hide them"},
      {lead:"invite the body", instr:"invite the body before the mind", explain:"understanding arrives through weight, balance, and reach"},
      {lead:"space will finish", instr:"let space finish the sentence", explain:"leave a gap and let the room write the rest"}
    ];
    var seen={}, card=document.getElementById('card'), btn=document.getElementById('btn');
    function pick(){ if(Object.keys(seen).length===prompts.length) seen={}; var i; do{i=Math.floor(Math.random()*prompts.length);}while(seen[i]); seen[i]=1; return i; }
    function draw(){
      var p=prompts[pick()];
      card.innerHTML='<div class="lead">'+p.lead+'</div><div class="instr">'+p.instr+'</div><div class="explain">'+p.explain.toLowerCase()+'</div>';
    }
    btn.addEventListener('click',draw);
    document.addEventListener('keydown',function(e){ if(e.code==='Space'){ e.preventDefault(); draw(); }});
  })();
</script></body></html>

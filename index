<body>
  <main class="text" id="card">
    <div class="lead">press <b>new</b> to draw</div>
    <div class="instr">&nbsp;</div>
    <div class="explain">&nbsp;</div>
  </main>
  <button id="btn">new</button>

  <script>
    (function(){
      var prompts=[
        {lead:"ask refusal", instr:"ask the material what it refuses", explain:"resistance reveals the form's boundary"},
        {lead:"repeat until you disappear", instr:"let repetition become trance", explain:"when rhythm replaces intention, the work begins to breathe"},
        {lead:"begin at the edge", instr:"begin at the edge, not the center", explain:"edges invite decisions; centers hide them"},
        {lead:"invite the body", instr:"invite the body before the mind", explain:"understanding arrives through weight, balance, and reach"},
        {lead:"space will finish", instr:"let space finish the sentence", explain:"leave a gap and let the room write the rest"}
      ];
      var seen={}, card=document.getElementById('card'), btn=document.getElementById('btn');
      function pick(){ if(Object.keys(seen).length===prompts.length) seen={}; var i; do{i=Math.floor(Math.random()*prompts.length);}while(seen[i]); seen[i]=1; return i; }
      function draw(){
        var p=prompts[pick()];
        card.innerHTML='<div class="lead">'+p.lead+'</div>'
                      +'<div class="instr">'+p.instr+'</div>'
                      +'<div class="explain">'+p.explain.toLowerCase()+'</div>';
      }
      btn.addEventListener('click',draw);
      document.addEventListener('keydown',function(e){ if(e.code==='Space'){ e.preventDefault(); draw(); }});
    })();
  </script>
</body>
